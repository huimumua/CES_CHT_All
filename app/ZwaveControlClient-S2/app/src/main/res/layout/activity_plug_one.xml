<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_plug"
    android:layout_width="@dimen/device_width"
    android:layout_height="@dimen/device_heigh"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_57"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/device_set_icon_top_10dp"
            android:layout_marginRight="@dimen/device_set_icon_top_10dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name"
            android:textSize="@dimen/device_title_30sp"
            style="@style/textview_red"
            android:layout_marginTop="@dimen/device_round_20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/color_top_bottom_10dp"
        android:layout_marginLeft="@dimen/device_round_20dp"
        android:layout_marginRight="@dimen/device_round_20dp"
        android:layout_marginTop="@dimen/device_smallericon_topbottom_10dp"
        >

    <LinearLayout
        android:id="@+id/ll_active_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/plug_smallericon_bottom_20dp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_notify_setted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_drawable_ic_60"
            android:layout_marginRight="@dimen/device_smaller_icon_10dp"
            />
        <ImageView
            android:id="@+id/iv_schedule_setted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_drawable_ic_58"
            android:layout_marginRight="@dimen/device_smaller_icon_10dp"
            />
        <ImageView
            android:id="@+id/iv_vacation_setted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_drawable_ic_109"
            />

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_trigger_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <CheckBox
                android:id="@+id/cb_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plug_selector"
                android:button="@null"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/iv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                />
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_energy_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/plug_biggericon_topbottom_20dp"
        android:layout_marginBottom="@dimen/device_round_20dp"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_49"
            />

        <ImageView
            android:id="@+id/iv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_50"
            android:layout_marginRight="@dimen/device_icon_20dp"
            android:layout_marginLeft="@dimen/device_icon_20dp"
            />
        <ImageView
            android:id="@+id/iv_vacation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vacation_mode"
            />
    </LinearLayout>

</LinearLayout>
