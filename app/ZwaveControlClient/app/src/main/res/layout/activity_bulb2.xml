<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_blub"
    android:layout_width="@dimen/device_width"
    android:layout_height="@dimen/device_heigh"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_57"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        />
    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />

        <LinearLayout
            android:id="@+id/ll_active_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_consumption_setted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_ic_61"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/iv_notify_setted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_ic_60"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:id="@+id/iv_schedule_setted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_ic_58"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:id="@+id/iv_vacation_setted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_ic_109"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:id="@+id/iv_trigger_setted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_ic_61"
                />
        </LinearLayout>
<TextView
    android:id="@+id/tv_bulb_explain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/bulb_explain"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:textColor="@color/white"
    android:visibility="invisible"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <FrameLayout
            android:id="@+id/fl_color"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            >
        <RelativeLayout
            android:id="@+id/ll_color_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <com.askey.mobile.zwave.control.deviceContr.rooms.ui.ColorPickViewOne
                android:id="@+id/color_picker_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                colorpicker:center_color="#FFFFFF"
                colorpicker:center_radius="10dp"
                colorpicker:circle_radius="100dp"
                />
            <CheckBox
                android:id="@+id/off_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/device_on_off"
                android:layout_centerInParent="true"
                android:button="@null"
                />
        </RelativeLayout>
            <RelativeLayout
            android:id="@+id/ll_color_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:visibility="gone"
            >
            <com.askey.mobile.zwave.control.deviceContr.rooms.ui.ColorPickViewTwo
                android:id="@+id/color_picker_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                colorpicker:center_color="#FFFFFF"
                colorpicker:center_radius="10dp"
                colorpicker:circle_radius="100dp"
                />
            <CheckBox
                android:id="@+id/iv_off_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/device_on_off"
                android:layout_centerInParent="true"
                android:button="@null"
                />
        </RelativeLayout>
            <RelativeLayout
            android:id="@+id/ll_color_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.askey.mobile.zwave.control.deviceContr.rooms.ui.ColorPickViewThird
                android:id="@+id/color_picker_third"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_off_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </RelativeLayout>
        </FrameLayout>
        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info"
            android:layout_toRightOf="@+id/fl_color"
            />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_left_color"
                style="@style/graybutton"
                android:text="@string/white"
                />
        <TextView
            android:id="@+id/tv_center_explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tap_center_explain"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            />
            <Button
                android:id="@+id/btn_right_color"
                style="@style/graybutton"
                android:layout_alignParentRight="true"
                android:text="@string/favorites"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_ic_53"
                android:layout_gravity="center_vertical"
                />

            <SeekBar
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/vector_drawable_ic_56"
                android:thumb="@drawable/vector_drawable_ic_54"
                android:maxHeight="2dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/seekBar" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_ic_54_smaller"
                android:layout_gravity="center_vertical"
                />
            </LinearLayout>
    <TextView
        android:id="@+id/tv_bright_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bright_explain"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        />
        <LinearLayout
            android:id="@+id/ll_energy_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

                <ImageView
                    android:id="@+id/iv_consumption"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_consumption"
                    />

                <ImageView
                    android:id="@+id/iv_notify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_49"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/iv_schedule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_50"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/iv_vacation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vacation_mode"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/iv_trigger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_trigger"
                    android:layout_weight="1"
                    />
        </LinearLayout>
    </LinearLayout>
        </ScrollView>
</LinearLayout>
