<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/device_width"
    android:layout_height="@dimen/device_heigh"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.askey.mobile.zwave.control.home.activity.addDevice.SelectBrandActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/select_brand"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="15dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_brandgrid"
        android:layout_gravity="center"
        android:padding="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_devices"
        android:gravity="center"
        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/aeotec_logo"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aeotec"
        android:gravity="center"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/select_brand_type"
        android:layout_marginTop="30dip"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:drawableTop="@drawable/ic_zwgeneral"
            android:id="@+id/zwave_general_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_gravity="center"
             android:layout_margin="10dp"
            android:text="Z-Wave"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/bt_geneeral_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btgeneeral"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/ic_btgeneeral"
            android:button="@null"
            android:text="BT Mesh"
            android:gravity="center"
            />

    </LinearLayout>

    <GridView
        android:id="@+id/brand_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:padding="15dp"
        android:visibility="gone"
        />
</LinearLayout>
