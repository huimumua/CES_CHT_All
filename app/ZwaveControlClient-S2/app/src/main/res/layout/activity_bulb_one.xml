<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_blub"
    android:layout_width="@dimen/device_width"
    android:layout_height="@dimen/device_heigh"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_57"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/device_set_icon_top_10dp"
            android:layout_marginRight="@dimen/device_set_icon_top_10dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name"
            android:textSize="@dimen/device_title_30sp"
            style="@style/textview_red"
            android:layout_marginTop="@dimen/device_round_20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            />
        </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/device_round_20dp"
            android:layout_marginRight="@dimen/device_round_20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/device_smallericon_topbottom_10dp"

            >
            <LinearLayout
                android:id="@+id/ll_active_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/device_smallericon_topbottom_10dp"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/iv_notify_setted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_drawable_ic_60"
                    android:layout_marginRight="@dimen/device_smaller_icon_10dp"
                    />

                <ImageView
                    android:id="@+id/iv_schedule_setted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_drawable_ic_58"
                    android:layout_marginRight="@dimen/device_smaller_icon_10dp"
                    />
                <ImageView
                    android:id="@+id/iv_vacation_setted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_drawable_ic_109"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <FrameLayout
                    android:id="@+id/fl_color"
                    android:layout_width="@dimen/color_width_200dp"
                    android:layout_height="@dimen/color_heigh_200dp"
                    android:layout_centerHorizontal="true"
                    >
                    <RelativeLayout
                        android:id="@+id/ll_color_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        >
                        <com.askey.mobile.zwave.control.deviceContr.rooms.ui.ColorPickViewOne
                            android:id="@+id/color_picker_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            colorpicker:center_color="#FFFFFF"
                            colorpicker:center_radius="10dp"
                            colorpicker:circle_radius="100dp"
                            />
                        <CheckBox
                            android:id="@+id/off_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/device_on_off"
                            android:layout_centerInParent="true"
                            android:button="@null"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ll_color_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        >
                        <com.askey.mobile.zwave.control.deviceContr.rooms.ui.ColorPickViewTwo
                            android:id="@+id/color_picker_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            colorpicker:center_color="#FFFFFF"
                            colorpicker:center_radius="10dp"
                            colorpicker:circle_radius="100dp"
                            />
                        <CheckBox
                            android:id="@+id/iv_off_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/device_on_off"
                            android:layout_centerInParent="true"
                            android:button="@null"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ll_color_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <com.askey.mobile.zwave.control.deviceContr.rooms.ui.ColorPickViewThird
                            android:id="@+id/color_picker_third"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            />
                        <ImageView
                            android:id="@+id/iv_off_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </FrameLayout>
                <ImageView
                    android:id="@+id/iv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_left_color"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="@string/color"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/color_top_bottom_10dp"
                android:layout_marginBottom="@dimen/color_top_bottom_10dp"
                android:textAllCaps="false"
                android:background="@drawable/stroke_rectangle"
                android:textColor="@color/color_4d4d4d"
                android:textSize="@dimen/device_control_content_12sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_drawable_ic_53"
                    android:layout_gravity="center_vertical"
                    />

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/progress_rectangle"
                    android:thumb="@drawable/vector_drawable_ic_54"
                    android:maxHeight="2dp"
                    android:max="100"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/seekBar" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_drawable_ic_54_smaller"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_energy_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/device_smaller_icon_10dp"
        android:layout_marginBottom="@dimen/device_round_20dp"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_49"
            />

        <ImageView
            android:id="@+id/iv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_50"
            android:layout_marginRight="@dimen/device_icon_20dp"
            android:layout_marginLeft="@dimen/device_icon_20dp"
            />
        <ImageView
            android:id="@+id/iv_vacation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vacation_mode"
            />
    </LinearLayout>
</LinearLayout>
